<Window x:Class="FindMySteamDLC.View.Library"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindMySteamDLC.View"
        mc:Ignorable="d"
        Title="Library" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#FF1C1B22" MouseDown="MoveWindow" Grid.Row="0">
            <Grid Style="{DynamicResource WindowButtonBarStyle}" x:Name="btn_quitWindow" MouseDown="ExitApplication" Width="40" Margin="760,0,0,0">
                <Label Content="&#xe8bb;" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" Foreground="#FF00F593" FontSize="8"/>
            </Grid>
            <Grid Style="{DynamicResource WindowButtonBarStyle}" x:Name="btn_minimizeWindow" Width="40" MouseDown="MinimizeApplication" Margin="720,0,40,0">
                <Label Content="&#xe921;" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" Foreground="#FF00F593" FontSize="8"/>
            </Grid>
        </Grid>
        <Frame x:Name="Main" Grid.Row="1"/>
    </Grid>
</Window>
